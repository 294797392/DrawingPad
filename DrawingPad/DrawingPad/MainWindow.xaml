<Window x:Class="DrawingPad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:layer="clr-namespace:DrawingPad.Layers"
        xmlns:visual="clr-namespace:DrawingPad.Drawable"
        xmlns:uc="clr-namespace:DrawingPad.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <uc:ToolboxUserControl Grid.Column="0"/>

        <Grid Grid.Column="1">
            <layer:DrawableVisualLayer x:Name="DrawableLayer" TextBoxEditor="{Binding ElementName=TextBoxEditor}"/>
            <Canvas>
                <TextBox x:Name="TextBoxEditor" Visibility="Collapsed"/>
            </Canvas>
        </Grid>
    </Grid>

</Window>
